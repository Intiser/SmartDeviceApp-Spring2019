<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="100dp"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/imageview_app"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textview_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_app"
        android:layout_marginTop="5dp"
        android:text="Title"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textview_app_developer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_app_name"
        android:layout_marginTop="5dp"
        android:text="Developer"
        android:textSize="12sp"
        />


    <TextView
        android:id="@+id/textview_app_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_app_developer_name"
        android:layout_marginTop="5dp"
        android:text="3.5 "
        android:textSize="12sp"
        />

</RelativeLayout>